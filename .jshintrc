{
    // Enforcing
    "curly"    : false,
    "forin"    : false,
    "latedef"  : "nofunc",
    "newcap"   : true,
    "quotmark" : "double",
    "eqeqeq"   : true,
    "undef"    : true,
    "maxstatements" : 15,
    "maxdepth" : 2,
    "maxcomplexity" : 5,
    "nonbsp" : true,
    "plusplus" : true,
    "regexp" : true,
    "globals"  : {
        "mendix" : false,
        "mx"     : false,
        "logger" : false
    },

    // Relaxing
    "laxbreak" : true,

    // Environments
    "browser"  : true,
    "devel"    : true,
    "dojo"     : true
}
